<!DOCTYPE html>

<html>
<%- include('./partials/head') %>
<%- include('./partials/header') %>

<section class="info-usuario container products-wrapper">
    <div class="row">
        <div class="img-container offset-3 col-2">
            <img src="<%=usuario.foto_de_perfil%>" alt="foto de perfil" class="foto-perfil">
        </div>
        <div class="data-container col-6">
            <div class="d-flex align-items-center ">
                <h1 class="main-title"><%=usuario.nombre%>
                    <a href="profile-edit.html">
                        <i class="fas fa-cog"></i>
                    </a>
                </h1> 
    
                <a class="btn mt-3 ml-4" href="">SEGUIR</a>
            </div>
            <h5>"<%= usuario.email%>"</h5>  
            <div>
                <ul class="">
                    <li><%= productos.length%> productos</li>
                    <li>200 seguidores</li>
                    <li>300 comentarios</li>
                </ul>
            </div>
        </div>
    </div>
</section>
<!-- /Datos del usuario -->

<!-- Mis productos -->
<div class="container products-wrapper">
    <div class="row">
        <div class="col-12">
            <h2 class="products-title">Mis productos</h2>
        </div>
        <% for (let i=0;i < productos.length;i++){%>

            <div class="col-12 col-sm-6 col-lg-3">
                <section class="product-box">
                    <a href="productos/detalle/<%=productos[i].id%>">
                        <figure class="product-box_image">
                            <img src="<%=productos[i].imagen%>" alt="producto">
                        </figure>
                        <article class="product-box_data">
                            <h2><%=productos[i].nombre_del_producto %></h2>
                                <p><%=productos[i].descripcion%></p>
                                <p>Comentarios: <%=comentarios.length %></p>
                        </article>
                    </a>
                </section>
            </div>

        <% }%>
    </div>
</div>

<%- include("./partials/footer") %>

</html>