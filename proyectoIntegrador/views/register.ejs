<!DOCTYPE html>

<html>
<%- include('./partials/head') %>
<%- include('./partials/header') %>

<div class="container products-wrapper formularios">
    <div class="row">
        <div class="col-12">
            <h2 class="products-title">Registrate</h2>
        </div>
        <!-- Show the "ultimos" products -->
        <!-- <h2 class="col-12"> Registrate</h2> -->
        <form method="POST" action="/usuarios/registrarse" class="forms">
            <label>Email</label>
            <%if(locals.errors){%>
            <input type="email" name="Email" placeholder="<%=errors.message%>">
            <%} else {%>
            <input type="email" name="Email">
            <%} %>
            <br>
            <label>Usuario</label>
            <%if(locals.errors){%>
            <input type="text" name="usuario" placeholder = "<%=errors.mensaje%>">
            <%} else {%>
            <input type="text" name="usuario">
            <%} %>
            <br>
            <label>Contrase√±a</label>
            <%if(locals.errors){%>
            <input type="password" name="password" placeholder="<%=errors.mensajeContrasenia%>">
            <%} else {%>
            <input type="password" name="password">
            <%} %>
            <br>
            <label>Fecha de Nacimiento</label>
            <%if(locals.errors){%>
            <p><%=errors.mensajeFecha%></p>
            <input type="date" name="Fecha">
            <%} else {%>
            <input type="date" name="Fecha">
            <%} %>
            <br>
            <label>Numero de Documento</label>
            <%if(locals.errors){%>
            <input type="number" name="Documento" placeholder="<%=errors.mensajeDocumento%>">
            <%} else {%>
            <input type="number" name="Documento">
            <%} %>
            <br>
            <label>Foto de Perfil</label>
            <input type="text" name="Foto">
            <br>
            <button type="submit">Registrarse</button>
        </form>
       

    </div>

</div>

<%- include("./partials/footer") %>


</html>