<!DOCTYPE html>

<html>
<%- include('./partials/head') %>
<%- include('./partials/header') %>

       
  

<div class="container products-wrapper">
    <div class="d-flex align-items-center">
        <h2 class="products-title"><%=productos.nombre%></h2> 
        <% if (productos.usuario_producto.id === navegador){%>

        
        <p class="product-detail-description">  
            <a href="/productos/agregar" class = "hipervinculo">Editar</a>
        </p>
    <% } %>
    </div>
    <div class="product-detail">
        <div class="row">
            <article class="col-12 col-lg-8 product-detail-info">
                <img src="<%=productos.foto_del_producto%>" alt="" class="product-detail-img">
                <p class="product-detail-description"><%=productos.descripcion%></p>
                <p class="product-detail-description">Creado por: <a href="/usuarios/editar/<%=productos.usuario_producto.id%>"><%=productos.usuario_producto.nombre%></a></p>
            </article>


            <div class="col-12 col-lg-4">
                <section class="comments">
                    <% for (let i=0;i <5;i++){%>
                    <article>
                        <img src="<%=comentarios[i].imagen_perfil %>" alt="">
                        <div class="data">
                            <p class="user">
                            <strong> <a href="/usuarios/perfil"><%=comentarios[i].nombre_usario %></a> </strong>
                             <%= comentarios[i].texto_del_comentario %></p>
                            </div>
                    </article>
                    <%}%>
                </section>
                <form class="form" action="/" method="POST">
                    <input class="form-input" type="text" value="Agregar comentario" placeholder="Agregar comentario">
                    <button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
                </form>
                <hr>
            </div>
        </div>
    </div>
</div>


<%- include("./partials/footer") %>

</html>
